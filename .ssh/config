# try to keep the connection alive, this avoids connection timeouts
ServerAliveInterval 60

ForwardAgent Yes

ControlMaster auto
ControlPath ~/.ssh/%r@%h:%p.control
ControlPersist 30m

Host kekcc
    Hostname login.cc.kek.jp
    User vsagar
    # ForwardX11 yes
    # ForwardX11Trusted yes
    LocalForward 8432 localhost:8432
    LocalForward 8434 localhost:8434
    LocalForward 8494 localhost:8494
    # Compression yes
    # Don't connect directly but rather via the gateway server
    ProxyJump sshcc1.kek.jp

Host sshcc1.kek.jp
    User vsagar
    # ForwardX11 yes
    # ForwardX11Trusted yes

Host sshcc2.kek.jp
    User vsagar
    # ForwardX11 yes
    # ForwardX11Trusted yes

Host cw0*
    HostName %h.cc.kek.jp
    User vsagar
    # ForwardX11 yes
    # ForwardX11Trusted yes
    LocalForward 8431 localhost:8431
    # Compression yes
    # Don't connect directly but rather via the gateway server
    ProxyJump sshcc2.kek.jp

Host desy
    User vsagar
    HostName naf-belle2.desy.de
